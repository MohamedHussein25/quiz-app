<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Quiz for <%= username %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <div class="title-bar">
      <h2>Hello, <%= username %>! Letâ€™s begin:</h2>
      <button id="darkToggle">ğŸŒ™ Dark Mode</button>
      <button id="muteToggle">ğŸ”ˆ Unmute</button>
    </div>

    <form id="quizForm" method="POST" action="/submit">
      <div id="progress-container">
        <div id="progress"></div>
      </div>

      <div id="timer">â± Time left: <span id="time">15</span>s</div>

      <% questions.forEach((q, i) => { %>
        <div class="question-block question-slide bg-<%= i % 5 %>" id="q<%= i %>" data-correct="<%= q.answer %>">
          <h3>Q<%= i + 1 %>: <%= q.question %></h3>

          <% const letters = ["A", "B", "C", "D"]; %>
          <% q.options.forEach((opt, idx) => { %>
            <label>
              <input type="radio" name="q<%= i %>" value="<%= letters[idx] %>">
              <%= letters[idx] %>: <%= opt.text %>
            </label><br>
          <% }) %>

          <div style="text-align: center;"><button type="button" class="nextBtn">Next â¡ï¸</button></div>
        </div>
      <% }) %>
    </form>
  </div>

  <script src="/script.js" defer></script>
  <script>
    window.addEventListener("DOMContentLoaded", () => {
      setupDarkMode();
    });
  </script>
</body>
</html>
